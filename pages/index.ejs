<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./components/head') %>
</head>

<body>
    <%- include('./components/sidebar') %>

        <div class="rightSide">
            <h1>Users</h1>

            <div id="users">
                <!-- <%# console.log(users) %> -->
                <% if (users.length) { %>
                    <div class="users__info">
                        <div>Name</div>
                        <div>ID</div>
                        <div>IP adress</div>
                        <div>Phone number</div>
                    </div>
                    <% users.forEach(user=> { %>
                        <div id="filter-list" style="display: flex;flex-direction: row;">
                            <div>
                                <%- user.Name %>
                            </div>
                            <div>
                                <%- user.ID %>
                            </div>
                            <div>
                                <%- user.IP %>
                            </div>
                            <div>
                                <%- user.Phone %>
                            </div>

                            <div>
                                <form action="/remove" method="POST" class="user__form">
                                    <input type="hidden" name="_id" value="<%- user._id %>">
                                    <button>Delete</button>
                                </form>
                            </div>

                        </div>
                        <% }) %>


                            <% } else { %>
                                <div>No users</div>
                                <% } %>
            </div>
        </div>



        <script src="/index.js"></script>
        <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
        <script src="AOS.js"></script>
</body>

</html>